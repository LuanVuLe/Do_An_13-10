<Window x:Class="Do_An.GiaoDien_Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chức năng Admin" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <DockPanel Background="#1F3C88" Grid.Column="0">
            <!-- Header -->
            <StackPanel DockPanel.Dock="Top" Background="#142850" Height="90">
                <TextBlock Text="🛠 Admin"
                           Foreground="White" FontSize="22" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,20,0,0"/>
                <TextBlock Text="Quản lý hệ thống"
                           Foreground="LightGray" FontSize="13"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Menu -->
            <ListBox x:Name="MenuList" Background="#1F3C88" BorderThickness="0"
                     Foreground="White" FontSize="16" DockPanel.Dock="Top"
                     SelectionChanged="MenuList_SelectionChanged">
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="Margin" Value="4"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0E6BA8"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#27496D"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.Resources>

                <ListBoxItem Content="🏠  Trang chủ" Selected="ListBoxItem_Selected"/>
                <ListBoxItem Content="👤  Quản lý tài khoản"/>
                <ListBoxItem Content="📚  Quản lý lớp học" Selected="ListBoxItem_Selected"/>
                <ListBoxItem Content="🔒  Quản lý phân quyền" Selected="ListBoxItem_Selected_1"/>
                <ListBoxItem Content="🛡  Bảo mật hệ thống"/>
                <ListBoxItem Content="📊  Xem báo cáo"/>
            </ListBox>

            <!-- Footer -->
            <StackPanel DockPanel.Dock="Bottom" Margin="10">
                <Separator Background="Gray" Height="1" Margin="0,5"/>
                <Button Content="🚪  Thoát"
                        Foreground="White" Background="#E63946"
                        FontWeight="Bold" Cursor="Hand"
                        Padding="10" Height="45"
                        BorderThickness="0" BorderBrush="Transparent"
                        HorizontalAlignment="Stretch"
                        Click="BtnThoat_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#E63946"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#c62828"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- Nội dung chính -->
        <Grid Grid.Column="1" Background="White">
            <DockPanel>
                <!-- Thanh tiêu đề -->
                <Border Background="#F0F0F0" Height="50" DockPanel.Dock="Top" 
                        BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <TextBlock x:Name="txtTitle"
                               Text="Admin Quản Lý Hệ Thống"
                               VerticalAlignment="Center"
                               Margin="20,0"
                               FontSize="18" FontWeight="Bold" Foreground="#333"/>
                </Border>

                <!-- Vùng nội dung -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ContentPanel" Margin="20"/>
                </ScrollViewer>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
