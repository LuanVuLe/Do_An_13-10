<Window x:Class="Do_An.NVQL_PCGV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phân công giảng viên"
        Height="600"
        Width="1108"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <Window.Resources>
        <!-- Style nút hành động -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E40AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox & ComboBox -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <!-- SỬA: khai báo RowDefinitions hợp lệ -->
    <Grid Margin="20,10,20,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E3A8A" CornerRadius="10" Padding="14" Margin="0,0,0,15">
            <DockPanel>
                <TextBlock Text="📘 QUẢN LÝ PHÂN CÔNG GIẢNG VIÊN"
                           Foreground="White" FontSize="22" FontWeight="Bold"
                           VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Button x:Name="btnThoat"
                Content="← Quay về menu"
                Style="{StaticResource ActionButton}"
                Background="#EF4444"
                Width="160"
                Click="BtnThoat_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Form nhập -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="15"
                BorderBrush="#D1D5DB" BorderThickness="1" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Lớp học -->
                <StackPanel Margin="10,0">
                    <TextBlock Text="Lớp học" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <ComboBox x:Name="cboLopHoc" Width="200"
                              DisplayMemberPath="TenLop"
                              SelectedValuePath="MaLop"
                              ToolTip="Chọn lớp học"/>
                </StackPanel>

                <!-- Giảng viên -->
                <StackPanel Margin="10,0">
                    <TextBlock Text="Giảng viên" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <ComboBox x:Name="cboGiaoVien" Width="200"
                              DisplayMemberPath="TenGV"
                              SelectedValuePath="MaGV"
                              ToolTip="Chọn giảng viên"/>
                </StackPanel>

                <!-- Ghi chú -->
                <StackPanel Margin="10,0">
                    <TextBlock Text="Ghi chú" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="txtGhiChu" Width="250" ToolTip="Nhập ghi chú (nếu có)"/>
                </StackPanel>

                <!-- Ngày phân công -->
                <StackPanel Margin="10,0">
                    <TextBlock Text="Ngày phân công" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <DatePicker x:Name="dpNgayPhanCong" Width="180" ToolTip="Chọn ngày phân công"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Các nút thao tác -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button x:Name="btnThem" Content="➕ Thêm" Style="{StaticResource ActionButton}" Background="#10B981" Width="120" Click="BtnThem_Click"/>
            <Button x:Name="btnSua" Content="✏️ Sửa" Style="{StaticResource ActionButton}" Background="#3B82F6" Width="120" Click="BtnSua_Click"/>
            <Button x:Name="btnXoa" Content="🗑️ Xóa" Style="{StaticResource ActionButton}" Background="#F87171" Width="120" Click="BtnXoa_Click"/>
            <Button x:Name="btnLamMoi" Content="🔄 Làm mới" Style="{StaticResource ActionButton}" Background="#6B7280" Width="120" Click="BtnLamMoi_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <Border Grid.Row="3" Background="White" CornerRadius="10" Padding="10" BorderBrush="#D1D5DB" BorderThickness="1">
            <DataGrid x:Name="dgPhanCong"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#F9FAFB"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      RowHeight="35"
                      FontSize="14"
                      BorderThickness="0"
                      SelectionMode="Single" Margin="-11,0,-11,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã PC" Binding="{Binding MaPC}" Width="80" />
                    <DataGridTextColumn Header="Tên lớp" Binding="{Binding TenLop}" Width="2*" />
                    <DataGridTextColumn Header="Giảng viên" Binding="{Binding TenGV}" Width="2*" />
                    <DataGridTextColumn Header="Ngày phân công" Binding="{Binding NgayPhanCong, StringFormat={}{0:dd/MM/yyyy}}" Width="150" />
                    <DataGridTextColumn Header="Ghi chú" Binding="{Binding GhiChu}" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
