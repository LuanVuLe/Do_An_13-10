<Window x:Class="Do_An.NVQL_QLD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Điểm Học Viên"
        Height="720" Width="1150"
        WindowStartupLocation="CenterScreen"
        Background="#EEF2FF"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Style TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style nút thao tác -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#A0A0A0" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E40AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style nút quay lại -->
        <Style x:Key="BackButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Effect" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2">
                                <TextBlock Text="←" FontSize="18" Margin="0,0,5,0"/>
                                <TextBlock Text="Quay về" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#CBD5E1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel Margin="20">

        <!-- Thanh tiêu đề -->
        <Border Background="#1E3A8A"
                CornerRadius="10"
                Padding="12"
                DockPanel.Dock="Top"
                Margin="0,0,0,15"
                Effect="{DynamicResource DropShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Nút quay về -->
                <Button x:Name="btnQuayVe"
                        Content="Quay về"
                        Style="{StaticResource BackButton}"
                        Width="120"
                        Click="btnQuayVe_Click"
                        HorizontalAlignment="Left"/>

                <!-- Tiêu đề -->
                <TextBlock Text="QUẢN LÝ ĐIỂM HỌC VIÊN"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Grid.Column="1"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Bộ lọc tìm kiếm -->
        <Border Background="White"
                Padding="15"
                CornerRadius="10"
                DockPanel.Dock="Top"
                Margin="0,0,0,15"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Effect="{DynamicResource DropShadow}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="Lớp:" VerticalAlignment="Center" Width="60"/>
                <ComboBox x:Name="cbLopHoc" Width="180"
                          DisplayMemberPath="TenLop"
                          SelectedValuePath="MaLop"/>

                <TextBlock Text="Môn học:" VerticalAlignment="Center" Width="80" Margin="10,0,0,0"/>
                <ComboBox x:Name="cbMonHoc" Width="180"
                          DisplayMemberPath="TenMon"
                          SelectedValuePath="MaMH"/>

                <TextBlock Text="Học viên:" VerticalAlignment="Center" Width="80" Margin="10,0,0,0"/>
                <Grid Width="200" Height="35" Margin="5">
                    <TextBox x:Name="txtMaHV" Padding="8,4" TextChanged="txtMaHV_TextChanged"/>
                    <TextBlock x:Name="txtPlaceholder"
                               Text="Nhập mã học viên"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontStyle="Italic"
                               Visibility="Visible"/>
                </Grid>

                <Button x:Name="btnTimKiem"
                        Content="Tìm kiếm"
                        Style="{StaticResource ActionButton}"
                        Width="120"
                        Margin="10,0"/>
                <Button x:Name="btnLamMoi"
                        Content="Làm mới"
                        Style="{StaticResource ActionButton}"
                        Width="120"/>
            </StackPanel>
        </Border>

        <!-- DataGrid hiển thị điểm -->
        <Border Background="White"
                CornerRadius="10"
                Padding="10"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Effect="{DynamicResource DropShadow}">
            <DataGrid x:Name="dgDiem"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#F9FAFB"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      RowHeight="35"
                      FontSize="14"
                      BorderThickness="0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã HV" Binding="{Binding MaHV}" Width="*" />
                    <DataGridTextColumn Header="Tên học viên" Binding="{Binding HoTen}" Width="2*" />
                    <DataGridTextColumn Header="Tên lớp" Binding="{Binding TenLop}" Width="2*" />
                    <DataGridTextColumn Header="Môn học" Binding="{Binding TenMonHoc}" Width="2*" />
                    <DataGridTextColumn Header="Điểm giữa kỳ" Binding="{Binding DiemGK}" Width="*" />
                    <DataGridTextColumn Header="Điểm cuối kỳ" Binding="{Binding DiemCK}" Width="*" />
                    <DataGridTextColumn Header="Điểm TB" Binding="{Binding DiemTB}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </DockPanel>
</Window>
