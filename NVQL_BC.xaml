<Window x:Class="Do_An.NVQL_BC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Báo cáo thống kê - Quản lý trung tâm"
        Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#1F456E"/>
        <SolidColorBrush x:Key="AccentColor" Color="#1ABC9C"/>
        <SolidColorBrush x:Key="ButtonHoverColor" Color="#2A6496"/>
        <SolidColorBrush x:Key="AccentHoverColor" Color="#16A085"/>
        <SolidColorBrush x:Key="GreyHoverColor" Color="#DCDCDC"/>
        <SolidColorBrush x:Key="SecondaryButtonColor" Color="#607D8B"/>
        <SolidColorBrush x:Key="SecondaryButtonHoverColor" Color="#78909C"/>

        <Style TargetType="TextBlock" x:Key="FilterLabelStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="ExportButtonStyle" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="BackButtonPrimaryStyle" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Background" Value="{StaticResource SecondaryButtonColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SecondaryButtonHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="CloseButtonStyle" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Background" Value="#EEEEEE"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource GreyHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource PrimaryColor}" Padding="15" CornerRadius="8">
            <TextBlock Text="BÁO CÁO &amp; THỐNG KÊ DỮ LIỆU"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       TextAlignment="Center"/>
        </Border>

        <WrapPanel Grid.Row="1" Margin="0, 20, 0, 20" HorizontalAlignment="Center">

            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="Loại báo cáo:" Style="{StaticResource FilterLabelStyle}" Margin="0,0,10,0"/>
                <ComboBox x:Name="cbReportType"
                          Width="200" Height="40"
                          FontSize="15"
                          SelectedIndex="0"
                          Padding="10, 0"
                          VerticalContentAlignment="Center"
                          BorderBrush="#DCDCDC"
                          BorderThickness="1">
                    <ComboBoxItem Content="Danh sách học viên theo lớp"/>
                    <ComboBoxItem Content="Báo cáo điểm theo lớp / môn"/>
                    <ComboBoxItem Content="Báo cáo học phí"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="Lớp:" Style="{StaticResource FilterLabelStyle}"/>
                <ComboBox x:Name="cbLop"
                          Width="180" Height="40"
                          FontSize="15"
                          Padding="10, 0"
                          VerticalContentAlignment="Center"
                          BorderBrush="#DCDCDC"
                          BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="Môn học:" Style="{StaticResource FilterLabelStyle}"/>
                <ComboBox x:Name="cbMon"
                          Width="180" Height="40"
                          FontSize="15"
                          Padding="10, 0"
                          VerticalContentAlignment="Center"
                          BorderBrush="#DCDCDC"
                          BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="Từ khóa:" Style="{StaticResource FilterLabelStyle}"/>
                <TextBox x:Name="txtKeyword"
                         Width="180" Height="40"
                         FontSize="15"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         BorderBrush="#DCDCDC"
                         BorderThickness="1"/>
            </StackPanel>

            <Button x:Name="BtnGenerate"
                    Content="Xem báo cáo"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="BtnGenerate_Click"/>

            <Button x:Name="BtnExport"
                    Content="Xuất CSV"
                    Style="{StaticResource ExportButtonStyle}"
                    Click="BtnExport_Click"/>

            <Button x:Name="BtnBack"
                    Content="Quay về Menu"
                    Style="{StaticResource BackButtonPrimaryStyle}"
                    Click="BtnBack_Click"/>



        </WrapPanel>

        <Border Grid.Row="2"
                Background="White"
                CornerRadius="10"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="1">

            <DataGrid x:Name="dgReport"
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#F9F9F9"
                      RowHeight="40"
                      FontSize="14"
                      BorderThickness="0"
                      VerticalScrollBarVisibility="Auto"
                      SelectionChanged="dgReport_SelectionChanged">

                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#EAF2F8"/>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="10, 0"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="#DCDCDC"/>
                    </Style>

                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        <Setter Property="BorderBrush" Value="#DCDCDC"/>
                        <Setter Property="Padding" Value="10, 0"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>

                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#DCDCDC"/>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>
        </Border>
    </Grid>
</Window>